!!!
%haml{:lang => 'ja'}
  %head
    %title AMAOTO_LIVE
    %meta{:charset => 'UTF-8'}
    %link{:rel => :stylesheet, :type => :'text/css', :href => 'play.css'}
    %link{:rel => :stylesheet, :type => :'text/css', :href => 'http://fonts.googleapis.com/css?family=Source+Code+Pro:400,700|Press+Start+2P'}
    %script{:type => 'text/javascript', :src => 'http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js'}
    %script{:type => 'text/javascript', :src => 'jquery.transit.min.js'}
    %script{:type => 'text/javascript', :src => 'soundjs-0.5.2.min.js'}
    %script{:type => 'text/javascript', :src => 'jquery.shuffleLetters.js'}
    %script{:type => 'text/javascript', :src => 'play.js'}
  %body
    %div{class: 'title'} #{@location.sub('.html', '').gsub('-','_').upcase}
    %a{onclick: "toggle(#{ "'" + @soundarg +"'" })"}
      %div{id: 'playbutton'}
        %div{class: 'playing'}
          %div{class: 'separator'}
        %div{class: 'triangle'}
    %div{id: 'messages'}
      %div{id: 'message-1'} rainfall : #{@location_data[:data][:RainFall]}
      %div{id: 'message-2'} temperature : #{@location_data[:data][:Temperature]}
      %div{id: 'message-3'} windspeed : #{@location_data[:data][:WindSpeed]}
      %p{id: 'kanji'} #{@message}
      %div{id: 'kanji-top'} sound :
